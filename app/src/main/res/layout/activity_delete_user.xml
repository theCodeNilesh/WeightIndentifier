<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040E22"
    tools:context=".DeleteUser">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_delete_sweep_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"

        />
    <TextView
        android:id="@+id/emailID_TextView"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginStart="25dp"
        android:textColor="#ffff"
        android:text="Email ID"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/emailId_EditText"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="325dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="50dp"
        android:text=""
        android:hint="Enter Email"
        android:background="@drawable/ground"
        android:paddingLeft="5dp"
        android:drawableLeft="@drawable/ic_mail_black_24dp"
        android:drawablePadding="5dp"/>

    <Button
        android:id="@+id/deleteUser_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="Delete User"
        android:background="@drawable/du"/>

</RelativeLayout>